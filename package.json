{
  "name": "classificador-frutas",
  "version": "1.0.4",
  "description": "Aplicativo para classificação científica de frutas",
  "main": "main.js",
  "scripts": {
    "dev": "NODE_ENV=development electron .",
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": ["teste", "hormonios", "classificador"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "unzipper": "^0.12.3"
  },
  "build": {
    "appId": "com.classificadorfrutas.app",
    "productName": "Classificador Frutas",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "renderer/**/*",
      "preload.js"
    ],
    "win": {
      "target": ["nsis"],
      "icon": "build/icon.ico",
      "publisherName": "Your Name"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": ["AppImage"],
      "icon": "build/icon.png"
    }
  }
}
